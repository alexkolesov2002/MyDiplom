<Window x:Class="Учет_работы_мастерских.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учет_работы_мастерских"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="740" Width="1280" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Левое меню-->
        <Border CornerRadius="10 0 0 10">
            <Border.Background >
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,3.5">
                    <GradientStop Color="#956cff" Offset="0"></GradientStop>
                    <GradientStop Color="#4f3347" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <!--Пользователь-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 35 0 0">
                    <Border CornerRadius="10" Width="40" Height="40">
                        <Border.Background >
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="White" Offset="0"></GradientStop>
                                <GradientStop Color="Gray" Offset="1"></GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="JP" Foreground="White" FontSize="22" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center"
                               Margin=" 3 0 0 2"></TextBlock>

                    </Border>
                    <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                        <TextBlock Text="Алексей Колесов" FontSize="15" Margin="0 0 0 5" Foreground="White"></TextBlock>
                        <TextBlock Text="Алексей Колесов" FontSize="11" Margin="0 0 0 5" Foreground="Black"></TextBlock>
                    </StackPanel>
                </StackPanel>


                <Separator Height="0.8" Margin="20 30" Background="#4c4c4c"></Separator>

                <!--Меню кнопок-->
                <Button Style="{StaticResource menuButtonActive}" Click="Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Какая-то мудя" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>

                </Button>

                <Button Style="{StaticResource menuButton}" x:Name="Button2" Click="Button2_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FileSignature" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Какая-то мудя" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>

                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="EnvelopeOpenText" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Какая-то мудя" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>

                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="PowerOff" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Какая-то мудя" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>

                </Button>

            </StackPanel>
        </Border>

        <!--Главный экран-->
        <Border CornerRadius="0 10 10 0" Grid.Column="1" x:Name="MainScreen" MouseDown="MainScreen_MouseDown">
            <Border.Background >
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,3.5">
                    <GradientStop Color="#956cff" Offset="0"></GradientStop>
                    <GradientStop Color="#4f3347" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!--Верх меню-->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin ="0 0 30 20">
                    <Button Content="Сегодня" Style="{StaticResource topMenuButton}"></Button>
                    
                </StackPanel>

            </Grid>



        </Border>


    </Grid>
</Window>
