<Page x:Class="Учет_работы_мастерских.PgRating"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учет_работы_мастерских"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PgRating">
    <Page.Resources>
        <DataTemplate x:Key="TemplateListRating">
            <StackPanel>
                <TextBox Text="{Binding title_criterion}"></TextBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ListRating">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding students.FullName}"></TextBlock>
                <ListBox ItemTemplate="{StaticResource TemplateListRating}" ItemsSource="{Binding listCriterial}"></ListBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="listStudentNew">
            <ListBox  ItemsSource="{Binding listStudent}" ItemTemplate="{StaticResource ListRating}"></ListBox>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="ListRating"  ItemTemplate="{StaticResource listStudentNew}"></ListBox>
    </Grid>
</Page>
